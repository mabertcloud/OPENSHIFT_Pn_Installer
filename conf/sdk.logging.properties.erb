### The name of this Log4j configuration ###
description=planon.sdk

### Console appender ###
log4j.appender.SdkConsoleAppender = org.apache.log4j.ConsoleAppender
log4j.appender.SdkConsoleAppender.target = System.out
log4j.appender.SdkConsoleAppender.layout = org.apache.log4j.PatternLayout
log4j.appender.SdkConsoleAppender.layout.ConversionPattern = %5p [%d{dd-MM-yyyy HH:mm:ss}] %m%n

### File appender ###
log4j.appender.SdkRollingAppender = org.apache.log4j.RollingFileAppender
log4j.appender.SdkRollingAppender.File = <%= ENV['OPENSHIFT_PLN_DIR'] %>logs/sdk.log
log4j.appender.SdkRollingAppender.MaxFileSize = 10MB
log4j.appender.SdkRollingAppender.MaxBackupIndex = 10
log4j.appender.SdkRollingAppender.layout = org.apache.log4j.PatternLayout
log4j.appender.SdkRollingAppender.layout.ConversionPattern = %5p [%d{dd-MM-yyyy HH:mm:ss}] %m%n

# default loglevel is WARN 
log4j.rootLogger = INFO, SdkConsoleAppender, SdkRollingAppender
# all log-lines from PnLogger should only be logged once; do NOT change unless 
# you know what you're doing!!!
log4j.additivity.pnlog = false
# the default PnLogger level is INFO
log4j.logger.pnlog = INFO, SdkConsoleAppender, SdkRollingAppender, CLOUDWATCH


  
log4j.appender.CLOUDWATCH = nl.planon.cloud.aws.logging.log4jappenders.CloudWatchAppenderSkeleton
log4j.appender.CLOUDWATCH.layout = org.apache.log4j.PatternLayout
log4j.appender.CLOUDWATCH.layout.ConversionPattern = %d [%t] %-5p %c- %m%n
log4j.appender.CLOUDWATCH.awsLogGroupName = customers-<%= ENV['OPENSHIFT_NAMESPACE'] %>
log4j.appender.CLOUDWATCH.awsLogStreamName = <%= ENV['OPENSHIFT_APP_DNS'] %>
log4j.appender.CLOUDWATCH.awsLogStreamFlushPeriodInSeconds = 5
log4j.appender.CLOUDWATCH.awsRegionName = eu-central-1



###EOF###
